<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="org.example.task10.HelloController">
    <TextField fx:id="nameField" layoutX="50" layoutY="30" promptText="Employee Name" />
    <ComboBox fx:id="employeeTypeComboBox" layoutX="50" layoutY="70" />
    <TextField fx:id="salaryField" layoutX="50" layoutY="110" promptText="Salary (for Full-time only)" />
    <TextField fx:id="hoursWorkedField" layoutX="50" layoutY="150" promptText="Hours Worked" />
    <TextField fx:id="hourlyRateField" layoutX="50" layoutY="190" promptText="Hourly Rate" />

    <Button fx:id="addButton" layoutX="200" layoutY="230" text="Add Employee" />
    <Button fx:id="calculateButton" layoutX="300" layoutY="230" text="Calculate Salaries" />
    <Button fx:id="deleteButton" disable="true" layoutX="420.0" layoutY="230.0" text="Delete Employee" />

    <TableView fx:id="employeeTable" layoutX="50" layoutY="270" prefWidth="600">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="typeColumn" text="Type" />
            <TableColumn fx:id="salaryColumn" text="Salary" />
        </columns>
    </TableView>
</AnchorPane>
